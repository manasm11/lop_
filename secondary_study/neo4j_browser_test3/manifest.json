{
    "name": "rotate google",
    "description": "extension to learn creating chrome extension.",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons":{
        "16": "./icon_16.png",
        "32": "./icon_32.png",
        "48": "./icon_48.png",
        "128": "./icon_128.png"
    },
    "background": {
        "scripts": [
            "./background.js"
        ]
    },
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "./popup.html"
    },
    "permissions": [
        "tabs",
        "https://www.google.com/*"
    ]
}